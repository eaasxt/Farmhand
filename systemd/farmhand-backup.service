[Unit]
Description=Farmhand Database Backup
After=network.target

[Service]
Type=oneshot
User=ubuntu
ExecStart=/home/ubuntu/Farmhand/scripts/optional/farmhand-backup.sh
# Also prune old backups
ExecStartPost=/home/ubuntu/Farmhand/scripts/optional/farmhand-backup.sh --prune 30

[Install]
WantedBy=multi-user.target
