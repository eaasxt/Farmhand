[Unit]
Description=Farmhand Stale Reservation Cleanup
Documentation=https://github.com/eaasxt/Farmhand
After=mcp-agent-mail.service

[Service]
Type=oneshot
ExecStart=__HOME__/.local/bin/bd-cleanup --cron --stale-hours=2
User=__USER__
Environment=HOME=__HOME__
Environment=BEADS_DB=__HOME__/.beads/beads.db

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=farmhand-cleanup
